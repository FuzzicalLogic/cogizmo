{
  "name": "@cogizmo/cogizmo",
  "version": "0.5.3",
  "description": "Convenience SuperClass for Custom Elements",
  "main": "src/cogizmo.mjs",
  "scripts": {
    "pretest": "node_modules/.bin/rimraf ./build/test/log",
    "test": "npm run test:chrome && npm run test:firefox",
    "test:all": "npm run test:chrome && npm run test:firefox",
    "test:chrome": "nightwatch --config ./build/test/nightwatch.json --env chrome ./build/test/test-module/unit.js",
    "test:firefox": "nightwatch --config ./build/test/nightwatch.json --env firefox ./build/test/test-module/unit.js",
    "build": "npm run build:clean && npm run test:chrome",
    "build:clean": "node_modules/.bin/rimraf ./build && npm run build:copy",
    "build:copy": "cpy \"**/*?(.*)\" \"../build\" --cwd=src --parents && npm run build:copy2",
    "build:copy2": "cpy \"./+(test|samples)/**/*?(.*)\" \"./build\" --parents && npm run build:docs",
    "build:docs": "cpy \"./!(README).md\" \"./build/doc\" && npm run build:license",
    "build:license": "cpy \"+(README|LICENSE)?(.*)\" \"./build/\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cogizmo/cogizmo.git"
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "javascript",
    "js",
    "vanilla-js"
  ],
  "author": "Donald Lee Atkinson <fuzzicallogic@outlook.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cogizmo/cogizmo/issues"
  },
  "homepage": "https://github.com/cogizmo/cogizmo#README.md",
  "files": [
    "/LICENSE",
    "/README.md",
    "/src/Cogizmo.js",
    "/src/Cogizmo.js"
  ],
  "devDependencies": {
    "chromedriver": "^2.45.0",
    "cpy-cli": "^2.0.0",
    "finalhandler": "^1.1.1",
    "geckodriver": "^1.14.1",
    "nightwatch": "^1.0.18",
    "selenium-server": "^3.141.59",
    "serve-static": "^1.13.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
